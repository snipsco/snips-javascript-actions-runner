{
    "env": {
        "es6": true,
        "node": true
    },
    "extends": [
        "eslint:recommended"
    ],
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "rules": {
        "no-console": "off",
        "quotes": ["error", "single", { "avoidEscape": true }],
        "quote-props": ["error", "as-needed"],
        "semi": ["error", "never"]
    }
}
